<Window x:Class="LayoutDemo.FrmWrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutDemo"
        mc:Ignorable="d"
        Title="FrmWrapPanel" Height="300" Width="300">
    <WrapPanel>
        <Button Content="我是按钮" VerticalAlignment="Top"></Button>
        <TextBlock VerticalAlignment="Stretch">我是文本</TextBlock>
        <CheckBox VerticalAlignment="Bottom">我是复选框</CheckBox>
        <ComboBox>
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
        </ComboBox>
    </WrapPanel>
</Window>
